<div class="container d-fluid">
    <h1>My tasks</h1>
    <ul>
        <% @tasks.each do |task| %>
            <%= true == task.completed ? "[x]" : "[ ]"%>
            <%= link_to task.title, task_path(task) %>
            <%= link_to "Delete", task_path(task),
                method: :delete,
                data:  {confirm: "Are you sur ?"} %>
            <%end%>
    </ul>
    <%= link_to "Add a task", tasks_new_path%>
</div>