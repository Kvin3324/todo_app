<div class="container d-fluid">
    <h1 class="new--task--title">Create a new task</h1>

    <%= form_for(@task) do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :details %>
        <%= f.text_field :details, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-primary create--btn' %>

    <% end %>
</div>